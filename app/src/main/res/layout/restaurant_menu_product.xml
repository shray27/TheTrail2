<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="7dp"
    android:paddingRight="7dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/dish_image"
                android:src="@drawable/tikka"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/veg"
                android:id="@+id/dish_isveg"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/dish_title"
                android:text="Paneer Tikka Paneer Tika Paneer Tikka"
                android:textColor="#000"
                android:textSize="18dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dish_base_price"
                android:textColor="#333"
                android:text="Rs. 219"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_marginTop="6dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:id="@+id/remove_item"
                android:tint="#c9343e"
                android:onClick="customize_remove"
                android:src="@drawable/ic_remove_circle_outline_black_24dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:textSize="30dp"
                android:id="@+id/dish_quantity"
                android:text="0"/>
            <ImageView
                android:layout_marginTop="6dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:tint="#4CAF50"
                android:onClick="customize"
                android:id="@+id/add_item"
                android:src="@drawable/ic_add_circle_outline_black_24dp"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_marginLeft="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dish_description"
        android:textColor="#666"
        android:text="This is optional description. this is opional description. this is optional descrition."/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="5dp"
        android:background="#555"/>
</LinearLayout>